<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE cadena_montaje [
    <!ELEMENT cadena_montaje (responsable, operario+, vehiculo*)>
    <!ELEMENT responsable (nombre, apellidos, (dni|nie))>
    <!ELEMENT operario (nombre, apellidos, (dni|nie))>
    <!ELEMENT nombre (#PCDATA)>
    <!ELEMENT apellidos (#PCDATA)>
    <!ELEMENT dni (#PCDATA)>
    <!ELEMENT nie (#PCDATA)>
    <!ELEMENT vehiculo (pieza*)>
    <!ELEMENT pieza (proveedor, fecha_fabricacion)>
    <!ELEMENT proveedor (#PCDATA)>
    <!ELEMENT fecha_fabricacion (#PCDATA)>
    <!ATTLIST cadena_montaje fecha CDATA #REQUIRED>
    <!ATTLIST cadena_montaje turno (M|T|N) #REQUIRED>
    <!ATTLIST responsable eid ID #REQUIRED>
    <!ATTLIST operario eid ID #REQUIRED>
    <!ATTLIST vehiculo vid ID #REQUIRED>
    <!ATTLIST pieza pid ID #REQUIRED>
    <!ATTLIST pieza operarios IDREFS #REQUIRED>
]>
