    </operario>
    <vehiculo vid="OU2993W">
        <pieza pid="AE2121" operarios="GRM AOF">
            <proveedor>Proveedor1</proveedor>
            <fecha_fabricacion></fecha_fabricacion>
        </pieza>
    </vehiculo>
</cadena_montaje>